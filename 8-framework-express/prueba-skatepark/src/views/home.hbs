{{> header
title="Lista de participantes"
}}
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Foto</th>
      <th scope="col">Nombre</th>
      <th scope="col">Años de experiencia</th>
      <th scope="col">Especialidad</th>
      <th scope="col">Estado</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    {{!-- Ocultamos los usuarios adminitradores de la lista de participantes --}}
    {{#unless this.is_admin}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>
        <img src="/assets/img/{{this.foto}}">
      </td>
      <td>{{this.nombre}}</td>
      <td>{{this.anos_experiencia}}</td>
      <td>{{especialidad}}</td>
      <td class="{{#if this.estado}}text-success{{else}}text-warning{{/if}} font-weight-bold">{{#if
        this.estado}}Aprobado{{else}}En revision{{/if}}</td>
    </tr>
    {{/unless}}
    {{/each}}
  </tbody>
</table>
