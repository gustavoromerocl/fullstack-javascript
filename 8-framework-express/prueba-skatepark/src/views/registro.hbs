{{> header
title="Registro"
}}

<form id="register-form">
  <div class="form-group row w-50 m-auto">
    <div class="form-group col-12 col-sm-6">
      <label>Email</label>
      <input class="form-control m-auto" name="email" required/>
    </div>
    <div class="form-group col-12 col-sm-6">
      <label>Nombre</label>
      <input class="form-control m-auto" name="name" required/>
    </div>
    <div class="form-group col-12 col-sm-6">
      <label>Password</label>
      <input class="form-control m-auto" name="password" type="password" required/>
    </div>
    <div class="form-group col-12 col-sm-6">
      <label>Repita la password</label>
      <input class="form-control m-auto" name="password-repeat" type="password" required/>
    </div>
    <div class="form-group col-12 col-sm-6">
      <label>Años de experiencia</label>
      <input class="form-control m-auto" name="exp" required/>
    </div>
    <div class="form-group col-12 col-sm-6">
      <label>Especialidad</label>
      <input class="form-control m-auto" name="speciality" required/>
    </div>
    <div class="form-group col-12 col-sm-12">
      <label>Foto de perfil</label>
      <input type="file" name="profileImage" id="profileImage" required/>
    </div>
  </div>
  <button class="btn btn-info mb-3">Registrarme</button>
  <p><a href="/login"> Iniciar sesión</a></p>
</form>